<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_wide_blk"
    >
	<Button
		android:id="@+id/btnStatcalc"
		android:layout_marginLeft="675dip"
		android:layout_width="201dip"
		android:layout_height="522dip"
		android:background="@drawable/btn_statcalc" 
		/>
	<Button
		android:id="@+id/btnCollectData"
		android:layout_width="201dip"
		android:layout_height="522dip"
		android:background="@drawable/btn_data_collection" 
		/>
	<Button
		android:id="@+id/btnAnalyze"
		android:layout_width="201dip"
		android:layout_height="522dip"
		android:background="@drawable/btn_data_analysis" 
		/>
	<Button
		android:id="@+id/btnMapView"
		android:layout_width="201dip"
		android:layout_height="522dip"
		android:background="@drawable/btn_map_view_land" 
		/>
</LinearLayout>